{% extends "FamilyTreeBundle::main.index.twig" %}

{% block body %}
    <div class="row">
        <div class="span4">
            <div class="well">
                <h4>جستجو</h4>

                <form class="" action="{{ path('family_tree_search') }}" method="post">
                    {{ form_widget(form) }}
                    <input type="submit" class="btn" value="جستجو"/>
                </form>
            </div>
        </div>
        <div class="span8">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>جنسیت</th>
                    <th>مشاهده</th>
                </tr>
                </thead>
                <tbody>
                {% for person in persons %}
                    <tr>
                        <td>{{ person.fname }}</td>
                        <td>{{ person.lname }}</td>
                        <td>
                            {% if person.gender == 'm' %}
                                مرد
                            {% else %}
                                زن
                            {% endif %}
                        </td>
                        <td><a href="{{ path('family_tree_show',{'id':person.id}) }}">مشاهده</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
