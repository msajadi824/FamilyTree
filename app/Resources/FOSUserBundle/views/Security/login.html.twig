{% extends "FamilyTreeBundle::main.index.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
{% if error %}
    <div class="hero-unit">
    <div>{{ error|trans }}</div>
    </div>
{% endif %}

<div class="hero-unit" style="background-color: lightskyblue;">
    <h5 style="margin-right: 90px;">ورود</h5>
<form action="{{ path("fos_user_security_check") }}" method="post" style="height:150px;">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />
<br/>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <input type="submit" id="_submit" name="_submit" class="btn" value="{{ 'security.login.submit'|trans }}"style="background-color: palegreen ;margin-left:90px; />
    <img src="{{ asset('bundles/familytree/img/fam.jpg') }} style="margin-right:500px;"/>
</form>
</div>
{% endblock body %}
